<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netelis.retail.web.account.dao.UserMapper">

    <insert id="insertUser" parameterType="com.netelis.retail.entiy.User">

        <selectKey keyProperty="keyId" resultType="String" order="BEFORE">
            select replace(uuid(),'-','') from dual
        </selectKey>

        insert into t_user(key_id,user_name,password,phone) values(#{keyId},#{userName},#{password},#{phone})

    </insert>

    <update id="updateUser" parameterType="com.netelis.retail.entiy.User">
        update t_user set user_name=#{userName},password=#{password},phone=#{phone} where key_id=#{keyId}
    </update>

    <delete id="deleteUser" parameterType="String">
        delete from t_user where key_id=#{keyId}
    </delete>

    <delete id="deleteUserByParamter" parameterType="com.netelis.retail.web.account.search.UserSearch">
        delete from t_user where user_name = #{userName} and phone = #{phone}
    </delete>

    <select id="findUser" parameterType="com.netelis.retail.web.account.search.UserSearch"
            resultType="com.netelis.retail.entiy.User">
        select * from t_user
        <where>
            <if test="userName != null">
                user_name = #{userName}
            </if>
            <if test="phone != null">
                and phone = #{phone}
            </if>
        </where>
    </select>

    <select id="findLoginByName" parameterType="String" resultType="com.netelis.retail.entiy.User">
        select user_name,password from t_user where user_name = #{parameter}
    </select>

</mapper>