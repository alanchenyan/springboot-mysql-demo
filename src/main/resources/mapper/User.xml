<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netelis.retail.web.account.dao.UserDao">
    <select id="findUser" parameterType="com.netelis.retail.web.account.search.UserSearch"
            resultType="com.netelis.retail.entiy.User">
        select * from t_user
        <where>
            <if test="userName != null">
                user_name = #{userName}
            </if>
            <if test="phone != null">
                and phone = #{phone}
            </if>
        </where>
    </select>

    <select id="findLoginByName" parameterType="String" resultType="com.netelis.retail.entiy.User">
        select user_name,password from t_user where user_name = #{parameter}
    </select>

    <insert id="insertUser" parameterType="com.netelis.retail.entiy.User" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(user_name,password,phone) values(#{userName},#{password},#{phone})
    </insert>
</mapper>