<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.netelis.retail.web.account.dao.UserDao">
    <select id="findByName" parameterType="String" resultType="com.netelis.retail.entiy.User">
        select * from t_user where user_name = #{name}
    </select>

    <select id="findLoginByName" parameterType="String" resultType="com.netelis.retail.entiy.User">
        select user_name,password from t_user where user_name = #{name}
    </select>

    <insert id="insert" parameterType="com.netelis.retail.entiy.User" useGeneratedKeys="true" keyProperty="userId">
        insert into t_user(user_name,password,phone) values(#{userName},#{password},#{phone})
    </insert>
</mapper>